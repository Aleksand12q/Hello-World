    }

    public static void task34() {
   // 34. Дана величина А, выражающая объем информации в байтах. 
   //Перевести А в более крупные единицы измерения информации. 	
    	
    	double b;
		
    	double k;
		
    	double m;
		
    	double g;
		
    	double t;

		b = 105999;

        k = b / 1024;
		
        System.out.println(b + " байты в Килобайты равно " + k);

		m = k / 1024;
		
		System.out.println(b + " байты в Мегабайтых равно " + m);

		g = m / 1024;
		
		System.out.println(b + " байты в Гигабайты равно " + g);

		t = g / 1024;
		
		System.out.println(b + " байты в Терабайты равно " + t);
	}
    public static void task35() {
 
        double M;
		
        double N;
		
        double x;
		
        double sd;
		
        double mc;

		M = 117;
		
		N = 8;

		x = M / N;
		
		sd = (int) (10 * x) % 10;
		
		mc = (int) x % 10;

		System.out.println("Cтаршая цифра дробной части " + sd);
		
		System.out.println("Mладшая цифра целой части " + mc);   	
	
}
   
public static void task36() {
	
// 36. Найти частное произведений четных и нечетных цифр четырехзначного числа.  

	Scanner scanner = new Scanner(System.in);
	
	System.out.println("Введите четырехзначное число");
	
	int n = Integer.parseInt(scanner.nextLine());
	
	double prChet = 1;
	
	double prNechet = 1;
	
	double prChast;
	
	int x;
	
	for(int i = 4; i>0; i--)
	
	{
	
		x = n % 10;
	
		if (x % 2 == 0)
	
		{
	
			prChet *= x;
	}
	
		else {
	
			prNechet *= x;
	}
	
		n = (n-x) / 10;
	}
	
	System.out.println("Четное произведение=" + prChet);
	
	System.out.println("Не четное произведение=" + prNechet);
	
	prChast = prChet / prNechet;
	
	System.out.println("Частное произведений=" + prChast);
	
}
	
public static void task37() {

	/*
	 * 37. Составить линейную программу, печатающую значение true, если указанное
	 * высказывание является истинным, и false — в противном случае: • Целое число N
	 * является четным двузначным числом. • Сумма двух первых цифр заданного
	 * четырехзначного числа равна сумме двух его последних цифр. • Сумма цифр
	 * данного трехзначного числа N является четным числом. • Точка с координатами
	 * (х, у) принадлежит части плоскости, лежащей между прямыми х= m, х= n (m<n). •
	 * Квадрат заданного трехзначного числа равен кубу суммы цифр этого числа. •
	 * Треугольник со сторонами а,b,с является равнобедренным. • Сумма каких-либо
	 * двух цифр заданного трехзначного натурального числа N равна третьей цифре. •
	 * Заданное число N является степенью числа а (показатель степени может
	 * находиться в диапазоне от 0 до 4). • График функции у = ах2 + bх+ с проходит
	 * через заданную точку с координатами (m, n).
	 */
	
	boolean A;
	
	int num;
	
	num = 22;



	if (num % 2 == 0) {
		
		A = true;
	
	} else {
		
		A = false;
	}
	System.out.println("Число " + num + " является четным двузначным числом " + A);

	int z;
	
	z = 1024;
	
	if (z % 10 + z / 10 % 10 == z / 100 % 10 + z / 1000 % 10) {
	
		A = true;
	}
	else {
		A = false;
	}
	System.out.println("Сумма двух первых цифр числа " + z + " равна сумме двух его последних цифр " + A);

	int numb;
	
	int n1;
	numb = 223;
	n1 = numb % 10 + numb / 10 % 10 + numb / 100 % 10;
	if (n1 % 2 == 0) {
		A = true;
	} else {
	A = false;
	}
	System.out.println("Сумма цифр данного трехзначного числа " + numb + " является четным числом " + A);

	int x;
	
	int y;
	
	int m;
	
	int n;
	
	x = 6;
	
	y = 3;
	
	m = 2;
	
	n = 8;
	
	if (x < n && x > m) {
		
		A = true;
	} 
	else {
		A = false;
	}
	System.out.println("Точка с координатами (" + x + "," + y + ") принадлежит части плоскости,"
			+ " лежащей между прямыми х=" + m + ", х=" + n + " " + A);

	int ch;
	
	int ch1;
	
	int ch2;
	
	double ch3;
	
	ch = 423;
	
	ch1 = ch * ch;
	
	ch2 = ch % 10 + ch / 10 % 10 + ch / 100 % 10;
	
	ch3 = Math.pow(ch2, 3);
	
	if (ch1 == ch3) {
		A = true;
	} else {
		A = false;
	}
	System.out.println("Квадрат числа " + ch + " равен кубу суммы цифр этого числа " + A);

	int a;
	
	int b;
	
	int d;
	
	a = 6;
	
	b = 5;
	
	d = 5;
	
	if (a == b || a == d || b == d) {
		
		A = true;
	} 
	else {
		
		A = false;
	}
	System.out.println("Треугольник со сторонами " + a + "," + b + "," + d + " является равнобедренным " + A);

	int k;

	k = 123;
	
	if (k % 10 == k / 10 % 10 + k / 100 % 10) {
		
		A = true;
	} else {
		
		A = false;
	}
	System.out.println("Сумма двух цифр трехзначного числа " + k + " равна третьей цифре " + A);

	int step;
	
	int chislo;
	
	step = 2;
	
	chislo = 18;
	
	if (step == 1 || chislo == Math.pow(step, 2) || chislo == Math.pow(step, 3) || chislo == Math.pow(step, 4)) {
		
		A = true;
	}
	else {
		
		A = false;
	}
	System.out.println("Число " + chislo + " является степенью числа " + step + " " + A);

	int c;
	
	a = 2;
	
	b = 4;
	
	c = 5;
	
	n = 1;
	
	m = 11;
	
	y = a * (n * n) + b * n + c;
	
	if (y == m) {
		
		A = true;
	} else {
		A = false;
	}
	System.out.println("График функции проходит через заданную точку с координатами (m, n) " + A);	

}

