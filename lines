   public static void task22() {
	   
	   //  Дано натуральное число Т, которое представляет длительность прошедшего времени в секундах.
	   //Вывести данное значение длительности в часах, минутах и секундах в следующей форме: ННч ММмин SSc

		int t;
		
		int h;
		
		int totalm;
		
		int m;
		
		int sec;

		t = 43995;

		totalm = t / 60;
		
		sec = t - (totalm * 60);
		
		h = totalm / 60;
		
		m = totalm - (h * 60);

		System.out.println( h + "ч " + m + "мин " + sec + "с");   
  }

     public static void task23() {
    	 
   // 23. Найти площадь кольца, внутренний радиус которого равен r, а внешний — R (R> r). 
    	 
    	double r1;
 		
    	double r;

 		double s;

 		r = 2.0;
 		
 		r1 = 4.1;

 		s = Math.PI * (r1 * r1 - r * r);

 		System.out.println( " Площадь кольца равна: " + s);
  }

     public static void task24() {
    
   //24. Найти площадь равнобедренной трапеции с основаниями а и  b  и углом α при большем основании а. 
    	 

 		double a;
 		
 		double b;
 		
 		double ugl;
 		
 		double s;

 		a = 4;
 		
 		b = 2;
 		
 		ugl = Math.PI / 4;

 		s = (a + b) * (a - b) * Math.tan(ugl) / 4;
 		
 		System.out.println(" Площадь равнобедренной трапеции" +  s);
  }

    public static void task25() {
    	
    	//25. Вычислить корни квадратного уравнения ах2+ bх + с = 0 с заданными коэффициентами a, b и с 
    	//(предполагается, что а≠0 и что дискриминант уравнения неотрицателен).  
    

		double a;
		
		double b;
		
		double c;
		
		double D;
		
		double x1;
		
		double x2;

		a = 2.0;
		
		b = 5.0;
		
		c = 3.0;

		D = b * b - 4 * a * c;

        x1 = (-b + Math.sqrt(D)) / (2 * a);
			
	    x2 = (-b - Math.sqrt(D)) / (2 * a);

		System.out.println("х1= " + x1);
			
		System.out.println("х2= " + x2);

	}

