		 b = 3;
		 
		 c  = a + b;
		 
		 System.out.println(c + " Сумма " );

		 r = a - b;
		
		 System.out.println(r + " Разность ");
		
         p = a * b ;
         
         System.out.println( p + "произведение" );
	
         ch = a / b;
	      
         System.out.println( ch + " Частное " );
	     
	
	}

