package by.htp.les04.main;
// Даны две точки А(х1, у1) и В(х2, у2). Составить алгоритм, 
//определяющий, которая из точек находится ближе к началу координат.
public class Task_32 {

	public static void main(String[] args) {
	
		double x1;
		
		double x2;
		
		double y1;
		
		double y2;
		
		double A;
		
		double B;
		
		x1 = 3;
		
		x2 = 3;
		
		y1 = 3;
        
		y2 = 3;
		
		A = Math.sqrt((x1 * x1) + (y1 * y1 ));
		
		B = Math.sqrt((x2*x2) + ( y2 * y2 ));
		
		
		if ( A > B ) {
			System.out.println( " Точка B ближе к началу координат " );
			
			
		} 
		if  ( A < B   ) {
			System.out.println( " Точка А ближе к началу координат "  );
			
		}else {
			
			System.out.println( " Точки А и В находятся на одно расстоянии от начало координат "  );
			
	}
	}
}
  
