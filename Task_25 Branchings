//22. Перераспределить значения переменных х и у так,
//чтобы в х оказалось большее из этих значений, а в y - меньшее. 
public class Task_41 {

	public static void main(String[] args) {
	

		int x;
		
		int y;
		
		int temp;

		x = 8;
		
		y = 10;

		if (y > x) {
			temp = y;
		     y = x;
			x = temp;
			System.out.println(" x= " + x + " y=" + y);
		} else  {
			System.out.println(" x= " + x + " y=" + y);
		}
	}

	}
