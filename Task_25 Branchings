// 14. Даны два угла треугольника (в градусах). 
//Определить, существует ли такой треугольник, и если да, то будет ли он прямоугольным
public class Task_33 {

	public static void main(String[] args) {
	
		int a ; 
		
		int b;
		
		a = 60;
		
		b = 230;
		
		if ( (a + b) ==  90) {
			
			System.out.println(   " Треугольник прямоугольный    "  );
			
			
		}
		if( (a  + b)== 180  ) {
			
			System.out.println( " Треугольник существует   "  );
		}
		if ( (a + b ) < 180   ) {
			
			System.out.println( " Треугольника не существует   "  );
		}
		else { 
			System.out.println( "  Треугольника не существует  "  );
		}

	}
  }
  
  package by.htp.les04.main;
// 15. Даны действительные числа х и у, не равные друг другу. Меньшее из этих двух чисел заменить половиной их суммы,
//а большее — их удвоенным произведением.
public class Task_34 {

	public static void main(String[] args) {
	 
		int x ;
		
		int y ;
		
		int z;
		
		int e;
		
		x = 2;
		
		y = 1;
		
		z = (x + y) / 2;
	    
		e = x * y * 2 ;
		
		if (( x != y)  ) {
			if ( x > y  ) {
			
		System.out.println( z  );
			
	}
		}else {
		
		System.out.println( " x == y  "  );
	}
		if ( x < y  ) {
			
			System.out.println( e );
		}
		
		
	}

}

package by.htp.les04.main;
//16. На плоскости ХОY задана своими координатами точка А. 
//Указать, где она расположена (на какой оси или в каком координатном угле). 
public class Task_35 {

	public static void main(String[] args) {
	
		
		int x;
		
		int y;
		 
    x = -6;
		
		y = -3;
		
    if ((x == 0) && (y == 0)) 
		{
			System.out.println("16) Точка А в центре плоскости");
		} else if (x == 0)
		{
			System.out.println("16) Точка А на оси Y"  );
		} 
		else if (y == 0) {
			
			System.out.println("16) Точка А на оси X");
		} 
		else if (x > 0 && y > 0) {
			
			System.out.println ( "Точка А в первой четверти ");
		} 
		else if (x < 0 && y > 0) {
			
			System.out.println( "Точка А в второй четверти ");
		}
		else if (x < 0 && y < 0) {
			
			System.out.println( "Точка А в третьей четверти ");

		}
		else {
			System.out.println("16) Точка А в четвертой четверти ");
		}
}
}

package by.htp.les04.main;
// 17. Даны целые числа m , n . Если числа не равны, 
//то заменить каждое из них одним и тем же числом, равным большему из исходных,
//а если равны, то заменить числа нулями. 
public class Task_36 {

	public static void main(String[] args) {
		int m;
		
		int n;
		
		m = 4;
		
		n  = 4;
		
		if ( m != n  ) {
			
			if ( m > n  ) {
				n = m;}
				
				if ( n > m  ) {
					m = n;
					System.out.println( m + "  числа не равны  m > n  " );
					System.out.println( n + " числа не равны n > m  " );
				}
			}
			
	
			
		
	
	if ( m == n  ) {
		
		n = m = 0;

		System.out.println( n + " Числа равны "   );
		
	}
		
	}
	
}
package by.htp.les04.main;
// 18. Подсчитать количество отрицательных среди чисел а, b, с.

public class Task_37 {

	public static void main(String[] args) {

		int a;
		
		int b;
		
		int c;
		
		int count;

		a = -8;
		
		b = -2;
		
		c = -5;
		
		count = 0;

		if (a < 0) {
			
			count++;
		}
		if (b < 0) {
			
			count++;
		}
		if (c < 0) {
			
			count++;
		} else {
			
			count = 0;
		}

		System.out.println(" отрицательных чисел " + count);
	}

	}
