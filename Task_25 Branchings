// 19. Подсчитать количество положительных среди чисел а, b, с. 
public class Task_38 {

	public static void main(String[] args) {
	
		int a;
		
		int b;
		
		int c;
		
		int coun;
		
		a = 5;
		
		b = 3;
		
		c = 1;
		
		coun = 0;
		
		if ( a > 0) {
			coun++;
		}
		 if ( b > 0   ) {
			 coun++;
		 }
         if ( c > 0 ) {
        	 coun++;
         }
         System.out.println(coun +  " положительных чисел  "  );
	} 

}

package by.htp.les04.main;
// 20. Определить, делителем каких чисел а, b, с является число k.
public class Task_39 {

	public static void main(String[] args) {
	 
		double a ;
		
		double b ;
		
		double c ;
		
		double k;

		a = 6;
		
		b = 7;
		
		c = 2;
		
		k = 4;
		
		if ( a % k == 0 ) {
			
			System.out.println( "число k явлется делителем числа  a "   );
			
		}else {
			
			System.out.println( " Число К не является делителем числа a  " );
		}
		
		if ( b % k == 0 ) {
			
			System.out.println( " Число К является делителем числа b  " );
		}else {
			System.out.println( " Число К не является делителем числа b  ");
		}
		if ( c % k == 0 ) {
			
			System.out.println(  " Число К является делителем числа c "  );
		}else {
			System.out.println( "Число К не является делителем числа с " );
		}
	}

}
package by.htp.les04.main;
import java.util.Scanner;
//21. Программа — льстец. На экране высвечивается вопрос «Кто ты: мальчик или девочка? Введи Д или М». В зависимости 
//от ответа на экране должен появиться текст «Мне нравятся девочки!» или «Мне нравятся мальчики!». 
public class Task_40 {

	public static void main(String[] args) {
		
		System.out.println( " Кто ты мальчик или девочка ? "  );
      
		Scanner num = new Scanner(System.in);
		
	    char e;
		
		e = 'D';
		
		switch(e) {
		
		case 'M':
			
			System.out.println(" Мне нравятся мальчики ");
			
			break;
		
		case 'D':
		
			System.out.println( " Мне нравятся девочки ");
			
			break;
			
			default:
				
				System.out.println( " Если хотите еще рас Льстец то введите D или M еще рас ");
			}
	}
}
