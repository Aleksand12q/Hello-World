// 24. Составить программу, определяющую результат гадания на ромашке — «любит—не любит», 
//взяв за исходное данное количество лепестков п.
public class Task_43 {

	public static void main(String[] args) {
	   
		int n;
		n =4;
		
		if ( n % 2 ==0 ) {
			
			System.out.println( " любит  " );
		}else {
			System.out.println( " не любит " );
		}
		

	}

}
package by.htp.les04.main;
//25. Написать программу — модель анализа пожарного датчика в помещении, которая выводит сообщение 
//«Пожароопасная ситуация », если температура в комнате превысила 60° С. 
public class Task_44 {

	public static void main(String[] args) {
	
		int C;
		
		C = 40;
		
		if ( C < 60 ) {
			System.out.println( " Пожарная ситуация "  );
		} else {
			System.out.println( " Все в норме " );
		}

	}

}
