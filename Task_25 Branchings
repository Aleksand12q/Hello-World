//23. Определить правильность даты, введенной с клавиатуры (число — от 1 до 31, месяц — от 1 до 12). 
//Если введены некорректные данные, то сообщить об этом. 
public class Task_42 {

	public static void main(String[] args) {
		
     int a ;
     
     int b;
     
     a = 1;
     b = 2;
     //b = 12;
     
     if (a <=31  ) {
    	 
    	 System.out.println( a+" День "  );
     }else {
    	 System.out.println(   " Введите коректные данные  даты "  );
    	 
     }
     if ( b <=12 ) {
    	 System.out.println( b +"Месяц" );
     }else {
    	 System.out.println(" Введите коректные данные месяца ");
     }
     
  }

}
