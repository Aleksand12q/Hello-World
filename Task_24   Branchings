//8. Составить программу нахождения наименьшего из квадратов двух чисел а и b. 
public class Task_28 {

	public static void main(String[] args) {
		
		int a;
		
		int b;
		
		int C_a ;
		
		int D_b ;
		
	    a = 4 ;
	    
	    b = 3;
	    
	    C_a = a * a ;
	    
	    D_b = b * b ;
		
		if ( C_a > D_b  ) {
			
			System.out.println(   " Квардрат    a   больше квадрата     b "   );
			
		} else {
			
			System.out.println( "  Квадрат     a  меньше квадрата       b  "   );
		}
		

	}

}
