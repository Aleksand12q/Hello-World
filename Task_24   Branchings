// 10. Составить программу, которая определит площадь какого круга меньше.
public class Task_30 {

	public static void main(String[] args) {
	
		
		
		int s;
		
		int s1;
		
		s = 4;
		
		s1 = 3;
		
		
		 if ( s > s1 ) {
			 System.out.println( " Площадь круга s больше s1 " );
		 
		 } else {
			 
			 System.out.println(  " Площадь круга s1 больше s " );
		 }

		

	}

}
package by.htp.les04.main;
//12. Даны три действительных числа. Возвести в квадрат те из них, 
//значения которых неотрицательны, и в четвертую степень — отрицательные


public class Task_31 {

	public static void main(String[] args) {
	
		int a ;
		
		int b ;
		
		int c ;
		
		int l; // числа неотрицательные 
		
		int k; // числа отрицательные 
		
		int p;
		
		a = 4;
		
		b = -2;
		
		c = -4;
		
		if ( a > 0   ) {
			
			 l = a * a ; 
			 System.out.println( "Квадрат не отрицательногое числа a  "  + l  );
		
		} else {
			  l = a * a * a *a;
			System.out.println (  "  Четвертая степень отрицательного числа a " + l );
		}
		 if ( b > 0) { k = b * b;
		 
		 System.out.println(  " квадрат не отрицательного числа b  " + k );
			 
			 
		 } else {
			
			 k = b * b * b * b;
			 
			 System.out.println(  "   Четвертая степень отрицательного числа b " + k );
			 
		 }
		 
		 if (  c > 0 ) {
			 
			 p = c * c ;
			 
			 System.out.println( "   квадрат не отрицательного числа c  " + p  );
		 } if ( c < 0) {
			 
			 p = c * c * c *c;
			 System.out.println(  "    Четвертая степень отрицательного числа c   " + p  );
			 
			 
		 }
		 
		 
		

	}

}
