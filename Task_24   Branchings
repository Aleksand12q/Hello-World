import java.util.Scanner;
// 9. Составить программу, которая определит по трем введенным сторонам,
//является ли данный треугольник равносторонним
public class Task_29 {

	public static void main(String[] args) {
		
	int a ;
	
	int b ;
	
	int c ;
	
	a = 9;
	
	b = 9;
	
	c = 4;
	
	if ( (a == b) && ( b == c) && ( c ==a ) ) {
		
		System.out.println(   "  Треугольник abc равностороний " );
	} else {
		
		System.out.println(  " Треугольник   abc не равностороний   " );
	}
        		

	}

}package by.htp.les04.main;
