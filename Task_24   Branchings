// Составить программу: определения наименьшего из двух чисел а и b.

public class Task_25 {

	public static void main(String[] args) {
	 
	int a;
	
	int b;
	
	a = 8;
	
	b = 4;

	if( a < b ) {
		
		System.out.println( " Число a меньше b    "   );
	}else {
		System.out.println( " Число b меньше a     "   );
	}
	
	}

}
