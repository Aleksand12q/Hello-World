// 6. Составить программу: определения наибольшего из двух чисел а и b. 
public class Task_26 {

	public static void main(String[] args) {
     
		int a ;
		
		int b;
		
		a = 6 ;
		
		b = 9;
		
		
		if ( a > b) {
			
			System.out.println( "  число  a   больше    b  "  );
		} else {
			System.out.println( " Число b  больше а   " );
		}

	}

}
