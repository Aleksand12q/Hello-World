				a_3 = 6;
				 
				b_3 = 8;
				
				c_3 =  Math.pow(a_3, 2) +  Math.pow(b_3, 2) ; // Формула гепотенузы
			    
				c_3 = Math.sqrt(c_3);

				System.out.println(c_3 +  " Гиппотенуза " );
				
				S_3 = (a_3 * b_3 ) / 2 ; // площадь
				
				 System.out.println(S_3  +  " Площадь " );
				
				 P_3 = a_3 + b_3 + c_3;
				 
				System.out.println(P_3 +   " периметр  " );
				
						     
			 
