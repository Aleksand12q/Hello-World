//13. Составить таблицу значений функции y = 5 - x2/2 
//на отрезке [-5; 5] с шагом 0.5. 
public class Task_13 {

	public static void main(String[] args) {

		int a;
		
		int b;
		
		double x;
		
		double y;
		
		double h;

		a = -5;
		
		b = 5;
		
		h = 0.5;

		
          for (x = a; x <= b; x += h) {
        	  
			System.out.print(" x = " + x + ",");
			
			y = 5 - ((x * x) / 2);
			
			System.out.println(" y =" + y);
		}

	}

}
