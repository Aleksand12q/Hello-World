package by.jonline.les05.main;
//11. Составить программу нахождения разности кубов первых двухсот чисел 
public class Task_11 {

	public static void main(String[] args) {
		int rezult;

		rezult = 0;

		for (int i = 1; i <= 200; i++) {
			
			rezult -= Math.pow(i, 3);
		}

		System.out.println(rezult);
	

	}

}
package by.jonline.les05.main;
// 12. Последовательность аn строится так: а1 = 1, an =6+ аn-1 ,
//для каждого n >1 Составьте программу нахождения произведения 
//первых 10 членов этой последовательности.
public class Task_12 {

	public static void main(String[] args) {
		
		int a1;
		
		int a2;

		a1 = 1;

		System.out.print( a1);

		for (int i = 1; i < 10; i++) {
			
			a2 = 6 + a1;
			
			a1 = a2;
			
			System.out.print(a2);
		}

		

	}
}
